rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{orgId}/candidates/{candidateId}/interviews/{sessionId}/{fileName} {
      // Allow unauthenticated interview uploads for token-mode candidates
      // Path security: orgId + candidateId + sessionId are hard to guess
      allow write: if true;
      allow read: if request.auth != null;
    }

    match /{orgId}/candidates/{candidateId}/{allPaths=**} {
      // Allow candidates to upload their own resumes/files
      // They are authenticated (either Firebase Auth or token mode)
      allow write: if request.auth != null;

      // Allow organization members to read candidate files
      allow read: if request.auth != null;
    }
    
    // Fallback for other files (branding, etc)
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
